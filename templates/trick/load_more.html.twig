{% for trick in tricks %}
    <div class="trick">
        <p>
            <a href="{{ path('trick_show', { slug : trick.slug }) }}">
                {% if trick.mainPicture %}
                    <img src="{{ asset('/upload/') }}{{ trick.mainPicture.picture }}" alt="{{ trick.mainPicture.alt }}"/>
                {% else %}
                    <img src="{{ asset('/jpg/defaultTrick.jpg') }}" alt="Trick"/>
                {% endif %}
            </a>
        </p>
        <p>
            <a href="{{ path('trick_show', { slug : trick.slug }) }}">{{ trick.name|capitalize }}</a>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('trick_edit', { slug : trick.slug }) }}"><img class="edit_icon" src="{{ asset('png/edit.png') }}" alt="Edit"></a>
                <a href="{{ path('trick_delete', { slug : trick.slug}) }}" data-confirm="Do you really want to delete ?"><img  class="delete_icon" src="{{ asset('png/trash.png') }}" alt="Delete"></a>
            {% endif %}
        </p>
    </div>
{% endfor %}

